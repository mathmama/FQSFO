<div class="login-form">
  <form  method="post">
  <h2>User Login</h2> 
  <hr>
    <div class="form-group">
      <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" required="required">
    </div>
    <div class="form-group">
      <input type="password" class="form-control" id="pwd" name="pwd" placeholder="Enter password" required="required">
    </div>
    <div class="form-check" style="float:left">
      <label class="form-check-label">
        <input class="form-check-input" type="checkbox"> Remember me
      </label>
    </div>
    <div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg btn-block" name="signin">Sign in</button>
        </div>
        <p><a href="#">Lost your Password?</a></p>
  </form>
  <div class="hint-text">Don't have an account? <a href="signup">Sign up here!</a></div>
</div>